<html>
  <head>
    <title>Online Voting Platform</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script>
        // function to delete election
        function deleteElection(id) {
          var token = document
            .querySelector('meta[name="csrf-token"]')
            .getAttribute("content");

            fetch(`/election/${id}`, {
                method: "DELETE",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ _csrf: token }),
            }).then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.log(err));
        }
    </script>
  </head>
  <body>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col gap-4 justify-center w-full p-4">
        <% if (elections.length === 0) { %>
            <h1 class="text-2xl flex justify-center text-gray-600">No elections created yet</h1>
        <% } %>
        <% for (var i=0; i<elections.length; i++) { %>
            <div class="flex justify-between gap-6">
                <li class="text-2xl"><%= elections[i].name %></li>
                <div class="flex gap-4 justify-center items-center text-xl">
                    <a href="/election/<%= elections[i].id %>"><i class="fa-solid fa-square-arrow-up-right hover:text-blue-500 transition duration-200"></i></a>
                    <div onclick="deleteElection('<%= elections[i].id %>')"><i class="cursor-pointer fa fa-trash hover:text-red-500 transition duration-200"></i></div>
                </div>
            </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
